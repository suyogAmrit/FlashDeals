<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_select_deals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/category_img"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@mipmap/flashdeal"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_select_deal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/category_img"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/ch_deals"
                android:layout_toStartOf="@+id/ch_deals"
                android:text="Deal"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ch_deals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/category_img"
                android:layout_alignRight="@+id/category_img"
                android:layout_below="@+id/category_img"
                android:layout_alignBaseline="@+id/tv_select_deal_title" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>