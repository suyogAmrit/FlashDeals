<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suyogindia.flashdeals.QuestionaryActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:padding="5dp"
                android:text="What is type of food you prefer?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinFoodType"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:padding="5dp"
                android:text="What type Movie you prefer?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinTypeMoview"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Which Area do you usually travel for work?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinTypeCity"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Who else are in your family?"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/form_background"
                android:hint="Wife,Father,Mother,Kids"
                android:maxLines="1"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtHomeAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:maxLines="1"
                android:padding="5dp"
                android:text="What is your Home Address?"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtOfficeAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:maxLines="1"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:text="What is your Office Address?"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:maxLines="1"
                android:padding="5dp"
                android:text="What is your alternate contact number?"
                android:textSize="16sp" />

            <!--<EditText-->
            <!--android:id="@+id/etAlternaetPhone"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@drawable/form_background"-->
            <!--android:hint="Enter 10 digit Number"-->
            <!--android:inputType="number"-->
            <!--android:maxLines="1"-->
            <!--android:padding="8dp"-->
            <!--android:singleLine="true"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textSize="13sp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_background"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Code"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="+91"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etAlternaetPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_background"
                    android:ems="10"
                    android:hint="Mobile.."
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
