<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/>
            <size
                android:width="40dp"
                android:height="30dp"/>
            <gradient android:angle="270" android:endColor="@color/blue" android:startColor="@color/colorPrimary" />
        </shape>
    </item>

    <item
        android:state_checked="false"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red"/>
            <size
                android:width="40dp"
                android:height="30dp"/>
            <gradient android:angle="270" android:endColor="@color/red" android:startColor="@color/colorAccent" />
        </shape>
    </item>

    <item
        android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/>
            <size
                android:width="40dp"
                android:height="30dp"/>
            <gradient android:angle="270" android:endColor="@color/blue" android:startColor="@color/colorPrimary" />
        </shape>
    </item>

    <item
        android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="@color/red"
                android:width="1dp"/>
            <size
                android:width="40dp"
                android:height="30dp"/>
            <gradient android:angle="270" android:endColor="@color/red" android:startColor="@color/colorAccent" />
        </shape>
    </item>
    </selector>